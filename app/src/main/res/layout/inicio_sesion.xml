<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="427dp"
        android:layout_height="213dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eco_recicla__1__" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="BIEVENIDO@ :)"
        android:textAlignment="center"
        android:textColor="@color/verde"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteY="242dp" />

    <EditText
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/redondear_edit"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="NOMBRE DE USUARIO"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="320dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/tvContraseña"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/redondear_edit"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="CONTRASEÑA"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="381dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="¿Quieres ser un miembro de ECO RECICLA? "
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tvContraseña"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="453dp"

        />

    <TextView
        android:id="@+id/tvRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="REGISTRATE AQUI :)"
        android:textAlignment="center"
        android:textColor="@color/verde"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="495dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="638dp"
        android:layout_height="361dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:rotation="45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContraseña"
        app:srcCompat="@drawable/aceite_1" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="638dp"
        android:layout_height="361dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:rotation="45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContraseña"
        app:srcCompat="@drawable/aceite_1" />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR SESIÓN"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="559dp"
        style="@style/botondegradado"
        app:layout_constraintTop_toBottomOf="@+id/tvRegistro"
        android:layout_marginTop="30dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>